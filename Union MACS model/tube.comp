DEFINE COMPONENT tube
DEFINITION PARAMETERS ()
SETTING PARAMETERS (r1, r2,length)
OUTPUT PARAMETERS (slope)

DECLARE
%{
  double slope;
%}

INITIALIZE
%{

%}

TRACE
%{
    double dt;
    
    PROP_Z0;
    if (sqrt(x*x+y*y)>r1)
      ABSORB;
    dt = length/vz;
    PROP_DT(dt);
    if (sqrt(x*x+y*y)>r2)
      ABSORB;

%}

